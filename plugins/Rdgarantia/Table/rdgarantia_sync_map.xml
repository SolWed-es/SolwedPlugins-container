<?xml version="1.0" encoding="UTF-8"?>
<!--
 * Rdgarantia Sync Mapping Table
 * Maps Rdgarantia IDs to FacturaScripts codes for synced entities
 *
 * @author  Solwed
 * @package Rdgarantia Plugin
 -->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>rdg_id</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>fs_code</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>entity_type</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <column>
        <name>last_sync</name>
        <type>timestamp</type>
        <null>NO</null>
        <default>CURRENT_TIMESTAMP</default>
    </column>
    <column>
        <name>created_at</name>
        <type>timestamp</type>
        <null>NO</null>
        <default>CURRENT_TIMESTAMP</default>
    </column>
    <constraint>
        <name>rdgarantia_sync_map_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>rdgarantia_sync_map_unique</name>
        <type>UNIQUE (rdg_id, entity_type)</type>
    </constraint>
</table>
