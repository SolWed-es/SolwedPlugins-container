<view>
    <columns>
        <group name="general" numcolumns="12">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true"/>
            </column>
            <column name="template" numcolumns="12" order="100">
                <widget type="radio" images="true" path="/Dinamic/Assets/Images/PlantillasPDF/"
                        fieldname="template" required="true"/>
            </column>
            <column name="size" numcolumns="2" order="110">
                <widget type="select" fieldname="size" required="true">
                    <values>A3</values>
                    <values>A4</values>
                    <values>A5</values>
                    <values>Legal</values>
                    <values>Letter</values>
                </widget>
            </column>
            <column name="orientation" numcolumns="2" order="120">
                <widget type="select" fieldname="orientation" translate="true" required="true">
                    <values>landscape</values>
                    <values>portrait</values>
                </widget>
            </column>
            <column name="logo" titleurl="ListAttachedFile" description="click-link-to-add"
                    numcolumns="4" order="130">
                <widget type="select" fieldname="idlogo" icon="fas fa-book-open" onclick="EditAttachedFile"/>
            </column>
            <column name="logo-size" numcolumns="2" order="140">
                <widget type="number" decimals="0" min="0" max="400" fieldname="logosize" icon="fas fa-arrows-alt-v"
                        required="true"/>
            </column>
            <column name="logo-align" numcolumns="2" order="150">
                <widget type="select" fieldname="logoalign" icon="fas fa-arrows-alt-h" translate="true" required="true">
                    <values>left</values>
                    <values>center</values>
                    <values>right</values>
                    <values>full-size</values>
                </widget>
            </column>
            <column name="top-margin" numcolumns="2" order="160">
                <widget type="number" decimals="0" min="0" max="400" fieldname="topmargin"
                        icon="fas fa-long-arrow-alt-up" required="true"/>
            </column>
            <column name="bottom-margin" numcolumns="2" order="170">
                <widget type="number" decimals="0" min="0" max="400" fieldname="bottommargin"
                        icon="fas fa-long-arrow-alt-down" required="true"/>
            </column>
            <column name="font" numcolumns="4" order="180">
                <widget type="select" fieldname="font" required="true"/>
            </column>
            <column name="font-size" numcolumns="2" order="190">
                <widget type="number" decimals="0" min="1" max="50" fieldname="fontsize" icon="fas fa-text-height"/>
            </column>
            <column name="title-font-size" numcolumns="2" order="200">
                <widget type="number" decimals="0" min="1" max="50" fieldname="titlefontsize"
                        icon="fas fa-text-height"/>
            </column>
            <column name="color-1" numcolumns="3" order="210">
                <widget type="color" fieldname="color1"/>
            </column>
            <column name="color-2" numcolumns="3" order="220">
                <widget type="color" fieldname="color2"/>
            </column>
            <column name="color-3" numcolumns="3" order="230">
                <widget type="color" fieldname="color3"/>
            </column>
            <column name="font-color" numcolumns="3" order="240">
                <widget type="color" fieldname="fontcolor"/>
            </column>
        </group>
        <group name="options" numcolumns="12">
            <column name="show-customer-code" numcolumns="3" order="100">
                <widget type="checkbox" fieldname="showcustomercode"/>
            </column>
            <column name="show-customer-phones" numcolumns="3" order="110">
                <widget type="checkbox" fieldname="showcustomerphones"/>
            </column>
            <column name="show-customer-email" numcolumns="3" order="120">
                <widget type="checkbox" fieldname="showcustomeremail"/>
            </column>
            <column name="show-numero2" numcolumns="3" order="130">
                <widget type="checkbox" fieldname="shownumero2"/>
            </column>
            <column name="show-payment-date" numcolumns="3" order="140">
                <widget type="checkbox" fieldname="showpaymentdate"/>
            </column>
            <column name="show-agent" numcolumns="3" order="150">
                <widget type="checkbox" fieldname="showagent"/>
            </column>
            <column name="show-invoice-alert-sketch" numcolumns="3" order="160">
                <widget type="checkbox" fieldname="showinvoicesketch"/>
            </column>
            <column name="hide-shipping-addresses" numcolumns="3" order="170">
                <widget type="checkbox" fieldname="hideshipping"/>
            </column>
            <column name="hide-number-invoice" numcolumns="3" order="180">
                <widget type="checkbox" fieldname="hidenumberinvoice"/>
            </column>
            <column name="hide-serie-invoice" numcolumns="3" order="190">
                <widget type="checkbox" fieldname="hideserieinvoice"/>
            </column>
            <column name="hide-observations" numcolumns="3" order="200">
                <widget type="checkbox" fieldname="hideobservations"/>
            </column>
            <column name="hide-payment-methods" numcolumns="3" order="210">
                <widget type="checkbox" fieldname="hidepaymentmethods"/>
            </column>
            <column name="hide-receipts" numcolumns="3" order="220">
                <widget type="checkbox" fieldname="hidereceipts"/>
            </column>
            <column name="hide-expiration-payment" numcolumns="3" order="230">
                <widget type="checkbox" fieldname="hideexpirationpayment"/>
            </column>
            <!-- NUEVAS OPCIONES DE VEHÍCULOS -->
            <column name="show-vehicle-next-to-customer" title="show-vehicle-next-to-customer" numcolumns="3" order="240">
                <widget type="checkbox" fieldname="showvehiclenexttocustomer"/>
            </column>
            <column name="show-vehicle-compact" title="show-vehicle-compact" numcolumns="3" order="250">
                <widget type="checkbox" fieldname="showvehiclecompact"/>
            </column>
            <column name="show-vehicle-specifications" title="show-vehicle-specifications" numcolumns="3" order="260">
                <widget type="checkbox" fieldname="showvehiclespecifications"/>
            </column>
        </group>
        <group name="vehicle-settings" title="vehicle-pdf-settings" icon="fa-solid fa-car" numcolumns="12">
            <column name="vehicle-max-display" title="vehicle-max-display" description="vehicle-max-display-desc" numcolumns="4" order="100">
                <widget type="number" decimals="0" min="1" max="5" fieldname="vehiclemaxdisplay"/>
            </column>
            <column name="vehicle-text-size" title="vehicle-text-size" numcolumns="4" order="110">
                <widget type="number" decimals="0" min="8" max="16" fieldname="vehicletextsize"/>
            </column>
            <column name="vehicle-position" title="vehicle-position" numcolumns="4" order="120">
                <widget type="select" fieldname="vehicleposition" translate="true">
                    <values>separate-section</values>
                    <values>below</values>
                    <values>right</values>
                </widget>
            </column>
            <column name="show-license-plate" title="show-license-plate" numcolumns="2" order="200">
                <widget type="checkbox" fieldname="showlicenseplate"/>
            </column>
            <column name="show-vin" title="show-vin" numcolumns="2" order="210">
                <widget type="checkbox" fieldname="showvin"/>
            </column>
            <column name="show-manufacturer" title="show-manufacturer" numcolumns="2" order="220">
                <widget type="checkbox" fieldname="showmanufacturer"/>
            </column>
            <column name="show-color" title="show-color" numcolumns="2" order="230">
                <widget type="checkbox" fieldname="showcolor"/>
            </column>
            <column name="show-fuel-type" title="show-fuel-type" numcolumns="2" order="240">
                <widget type="checkbox" fieldname="showfueltype"/>
            </column>
            <column name="show-kilometers" title="show-kilometers" numcolumns="2" order="250">
                <widget type="checkbox" fieldname="showkilometers"/>
            </column>
            <column name="vehicle-border-color" title="vehicle-border-color" numcolumns="3" order="300">
                <widget type="color" fieldname="vehiclebordercolor"/>
            </column>
            <column name="vehicle-background-color" title="vehicle-background-color" numcolumns="3" order="310">
                <widget type="color" fieldname="vehiclebackgroundcolor"/>
            </column>
            <column name="vehicle-header-color" title="vehicle-header-color" numcolumns="3" order="320">
                <widget type="color" fieldname="vehicleheadercolor"/>
            </column>
            <column name="vehicle-text-color" title="vehicle-text-color" numcolumns="3" order="330">
                <widget type="color" fieldname="vehicletextcolor"/>
            </column>
        </group>
        <group name="lines" title="lines" icon="fas fa-list" numcolumns="12">
            <column name="line-columns" description="line-columns-desc" numcolumns="6" order="100">
                <widget type="text" fieldname="linecols"/>
            </column>
            <column name="line-column-alignments" description="line-column-alignments-desc" numcolumns="6" order="110">
                <widget type="text" fieldname="linecolalignments"/>
            </column>
            <column name="line-column-types" description="line-column-types-desc" numcolumns="6" order="120">
                <widget type="text" fieldname="linecoltypes"/>
            </column>
            <column name="lines-height" numcolumns="6" order="130">
                <widget type="number" decimals="0" min="0" max="650" fieldname="linesheight" icon="fas fa-arrows-alt-v"
                        required="true"/>
            </column>
        </group>
        <group name="end-texts" title="end-text" icon="fas fa-font" numcolumns="12">
            <column name="end-text" numcolumns="12" order="100">
                <widget type="textarea" fieldname="endtext"/>
            </column>
            <column name="end-font-size" order="110">
                <widget type="number" decimals="0" min="1" max="50" fieldname="endfontsize" icon="fas fa-text-height"/>
            </column>
            <column name="end-text-align" order="120">
                <widget type="select" fieldname="endalign" icon="fas fa-align-left" translate="true" required="true">
                    <values>left</values>
                    <values>center</values>
                    <values>right</values>
                    <values>justify</values>
                </widget>
            </column>
            <column name="image-text" title="image" titleurl="ListAttachedFile" description="click-link-to-add"
                    order="130">
                <widget type="select" fieldname="idimagetext" icon="fas fa-book-open" onclick="EditAttachedFile"/>
            </column>
            <column name="image-text-size" title="image-size" order="140">
                <widget type="number" decimals="0" min="0" max="400" fieldname="imagetextsize"
                        icon="fas fa-arrows-alt-v" required="true"/>
            </column>
        </group>
        <group name="thanks-texts" title="thanks-text" icon="fas fa-font" numcolumns="12">
            <column name="thanks-title" numcolumns="12" order="150">
                <widget type="text" fieldname="thankstitle"/>
            </column>
            <column name="thanks-text" numcolumns="12" order="160">
                <widget type="textarea" fieldname="thankstext"/>
            </column>
        </group>
        <group name="footer-texts" title="footer-text" icon="fas fa-font" numcolumns="12">
            <column name="footer-text" description="footer-text-description" numcolumns="12" order="100">
                <widget type="textarea" fieldname="footertext"/>
            </column>
            <column name="footer-font-size" order="110">
                <widget type="number" decimals="0" min="1" max="50" fieldname="footerfontsize"
                        icon="fas fa-text-height"/>
            </column>
            <column name="footer-text-align" order="120">
                <widget type="select" fieldname="footeralign" icon="fas fa-align-left" translate="true" required="true">
                    <values>left</values>
                    <values>center</values>
                    <values>right</values>
                    <values>justify</values>
                </widget>
            </column>
            <column name="image-footer" title="image" titleurl="ListAttachedFile" description="click-link-to-add"
                    order="130">
                <widget type="select" fieldname="idimagefooter" icon="fas fa-book-open" onclick="EditAttachedFile"/>
            </column>
            <column name="image-footer-size" title="image-size" order="140">
                <widget type="number" decimals="0" min="0" max="400" fieldname="imagefootersize"
                        icon="fas fa-arrows-alt-v" required="true"/>
            </column>
        </group>
        <group name="qr-code" title="qr-code" icon="fas fa-qrcode" numcolumns="12" valign="bottom">
            <column name="qr-field" numcolumns="3" order="100">
                <widget type="text" fieldname="qrfield"/>
            </column>
            <column name="qr-size" numcolumns="3" order="110">
                <widget type="number" decimals="0" min="50" max="200" fieldname="qrsize"/>
            </column>
            <column name="qr-position-x" numcolumns="3" order="120">
                <widget type="number" decimals="0" min="0" fieldname="qrpositionx"/>
            </column>
            <column name="qr-position-y" numcolumns="3" order="130">
                <widget type="number" decimals="0" min="0" fieldname="qrpositiony"/>
            </column>
            <column name="color" numcolumns="3" order="140">
                <widget type="color" fieldname="qrcolor"/>
            </column>
            <column name="background-color" numcolumns="3" order="150">
                <widget type="color" fieldname="qrbgcolor"/>
            </column>
            <column name="background-transparent" order="160">
                <widget type="checkbox" fieldname="qrtransparent"/>
            </column>
        </group>
        <group name="advanced" title="advanced" icon="fas fa-toolbox" numcolumns="12">
            <column name="password" description="pdf-password-p" numcolumns="3" order="100">
                <widget type="text" fieldname="password" maxlength="15"/>
            </column>
        </group>
    </columns>
    <rows>
        <row type="actions">
            <button type="action" label="preview" action="preview" icon="fas fa-eye"/>
        </row>
    </rows>
</view>