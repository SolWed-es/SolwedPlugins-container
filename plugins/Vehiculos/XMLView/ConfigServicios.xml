<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="vehicle-settings" title="vehicle-settings" description="vehicle-settings-desc" icon="fa-solid fa-car" numcolumns="12" valign="bottom">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true"/>
            </column>
            <column name="vehicle-pattern" title="vehicle-pattern" numcolumns="6" order="100">
                <widget type="text" fieldname="patron"/>
            </column>
            <column name="number-length" numcolumns="3" order="110">
                <widget type="number" fieldname="longnumero" decimal="0" min="1" required="true"/>
            </column>
            <column name="require-customer" title="require-customer-for-vehicle" order="120">
                <widget type="checkbox" fieldname="require_customer"/>
            </column>
        </group>
        <group name="print-vehicle-invoice" title="vehicle-in-invoices" description="vehicle-in-invoices-desc" icon="fa-solid fa-file-pdf" numcolumns="12" valign="bottom">
            <column name="print-vehicle-in-invoice" title="show-vehicle-data" order="100">
                <widget type="checkbox" fieldname="print_vehicle_in_invoice"/>
            </column>
            <column name="print-vehicle-kilometers" title="show-kilometers" order="110">
                <widget type="checkbox" fieldname="print_vehicle_kilometers"/>
            </column>
            <column name="print-vehicle-fuel" title="show-fuel-type" order="120">
                <widget type="checkbox" fieldname="print_vehicle_fuel"/>
            </column>
            <column name="print-vehicle-color" title="show-color" order="130">
                <widget type="checkbox" fieldname="print_vehicle_color"/>
            </column>
            <column name="print-vehicle-manufacturer" title="show-manufacturer" order="140">
                <widget type="checkbox" fieldname="print_vehicle_manufacturer"/>
            </column>
            <column name="print-vehicle-serial" title="show-serial-number" order="150">
                <widget type="checkbox" fieldname="print_vehicle_serial"/>
            </column>
        </group>
        <group name="vehicle-validation" title="vehicle-validation" description="vehicle-validation-desc" icon="fa-solid fa-shield-alt" numcolumns="12" valign="bottom">
            <column name="validate-vin" title="validate-vin-format" order="100">
                <widget type="checkbox" fieldname="validate_vin"/>
            </column>
            <column name="validate-license-plate" title="validate-license-plate" order="110">
                <widget type="checkbox" fieldname="validate_license_plate"/>
            </column>
            <column name="auto-uppercase" title="auto-uppercase-fields" order="120">
                <widget type="checkbox" fieldname="auto_uppercase"/>
            </column>
        </group>
    </columns>
</view>