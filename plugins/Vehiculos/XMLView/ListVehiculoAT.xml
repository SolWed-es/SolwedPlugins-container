<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="idmaquina"/>
        </column>
        <column name="license-plate" order="105">
            <widget type="text" fieldname="matricula"/>
        </column>
        <column name="name" order="110">
            <widget type="text" fieldname="nombre"/>
        </column>
        <column name="manufacturer" order="115">
            <widget type="select" fieldname="codfabricante">
                <values source="fabricantes" fieldcode="codfabricante" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="vin-number" order="120">
            <widget type="text" fieldname="bastidor"/>
        </column>
        <column name="kilometers" order="125">
            <widget type="number" fieldname="kilometros"/>
        </column>
        <column name="fuel-type" order="130">
            <widget type="text" fieldname="combustible"/>
        </column>
        <column name="color" order="135">
            <widget type="text" fieldname="color"/>
        </column>
        <column name="customer" order="140">
            <widget type="select" fieldname="codcliente">
                <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="registration-date" order="145">
            <widget type="date" fieldname="fecha_matriculacion"/>
        </column>
        <column name="date" display="right" order="150">
            <widget type="date" fieldname="fecha"/>
        </column>
    </columns>
</view>