<view>
    <columns>
        <!-- Información principal del vehículo -->
        <group name="vehicle-info" title="informacion-vehiculo" numcolumns="12" order="100">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="idmaquina"/>
            </column>
            
            <!-- Primera fila: Marca y Modelo (campos principales) -->
            <column name="brand" numcolumns="4" order="110">
                <widget type="text" fieldname="marca" maxlength="50" icon="fa-solid fa-car" required="true"/>
            </column>
            <column name="model" numcolumns="4" order="120">
                <widget type="text" fieldname="modelo" maxlength="100" icon="fa-solid fa-car-side" required="true"/>
            </column>
            <column name="manufacturer" titleurl="ListFabricante" numcolumns="4" order="130">
                <widget type="select" fieldname="codfabricante" onclick="EditFabricante">
                    <values source="fabricantes" fieldcode="codfabricante" fieldtitle="nombre"/>
                </widget>
            </column>
            
            <!-- Segunda fila: Identificación del vehículo -->
            <column name="license-plate" numcolumns="3" order="140">
                <widget type="text" fieldname="matricula" maxlength="20" icon="fa-solid fa-address-card" required="true"/>
            </column>
            <column name="vin-number" numcolumns="5" order="150">
                <widget type="text" fieldname="bastidor" maxlength="17" icon="fa-solid fa-barcode" required="true"/>
            </column>
            <column name="engine-code" numcolumns="4" order="160">
                <widget type="text" fieldname="codmotor" maxlength="50" icon="fa-solid fa-cog"/>
            </column>

            <!-- Tercera fila: Información técnica -->
            <column name="serial-number" numcolumns="4" order="170">
                <widget type="text" fieldname="numserie" maxlength="100" icon="fa-solid fa-hashtag"/>
            </column>
            <column name="kilometers" numcolumns="3" order="180">
                <widget type="number" fieldname="kilometros" icon="fa-solid fa-gauge"/>
            </column>
            <column name="registration-date" numcolumns="3" order="190">
                <widget type="date" fieldname="fecha_matriculacion" icon="fa-solid fa-calendar-check"/>
            </column>
            <column name="fuel-type" numcolumns="2" order="200">
                <widget type="select" fieldname="combustible" icon="fa-solid fa-gas-pump">
                    <values title="gasoline">Gasolina</values>
                    <values title="diesel">Diésel</values>
                    <values title="electric">Eléctrico</values>
                    <values title="hybrid">Híbrido</values>
                    <values title="lpg">GLP</values>
                    <values title="cng">GNC</values>
                </widget>
            </column>
            
            <!-- Cuarta fila: Información adicional -->
            <column name="color" numcolumns="3" order="210">
                <widget type="text" fieldname="color" maxlength="50" icon="fa-solid fa-palette"/>
            </column>
            <column name="legacy-name" numcolumns="9" order="220">
                <widget type="text" fieldname="nombre" maxlength="100" readonly="true" icon="fa-solid fa-info-circle"/>
            </column>
            
            <!-- Quinta fila: Descripción completa -->
            <column name="description" numcolumns="12" order="230">
                <widget type="textarea" fieldname="descripcion" rows="3"/>
            </column>
        </group>
        
        <!-- Información del propietario -->
        <group name="owner-info" title="informacion-propietario" numcolumns="12" order="200">
            <column name="customer" titleurl="ListCliente" numcolumns="6" order="240">
                <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente" required="true">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="agent" titleurl="ListAgente" numcolumns="3" order="250">
                <widget type="select" fieldname="codagente" onclick="EditAgente">
                    <values source="agentes" fieldcode="codagente" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="date" numcolumns="3" order="260">
                <widget type="date" fieldname="fecha"/>
            </column>
        </group>
    </columns>
</view>