<view>
    <columns>
        <column name="holidaystatus" order="200">
            <widget type="select" fieldname="holidaystatus" />
        </column>
    </columns>
    <rows>
        <row type="status"  fieldname="holidaystatus" overwrite="true">
            <option title="Solicitadas" color="warning">Solicitadas</option>
            <option title="Aceptadas" color="success">Aceptadas</option>
            <option title="Denegadas" color="danger">Denegadas</option>
        </row>
    </rows>
</view>