<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="idtareaempl" readonly="true" />
            </column>
            <column name="name" numcolumns="6" order="110">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column name="address" numcolumns="6" order="120">
                <widget type="text" fieldname="direccion" required="true" />
            </column>
            <column name="status" numcolumns="6" order="130">
                <widget type="select" fieldname="estado">
                    <values title="Pendiente">pendiente</values>
                    <values title="En Proceso">en_proceso</values>
                    <values title="Completada">completada</values>
                </widget>
            </column>
            <column name="date" numcolumns="6" order="140">
                <widget type="date" fieldname="fecha" />
            </column>
        </group>
    </columns>
</view>